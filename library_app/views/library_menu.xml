<?xml version="1.0"?>
<odoo>
    <!-- Library App Menu -->
    <menuitem id="menu_library"
              name="Library"
    />

    <!-- Action to open the Book list -->
    <act_window id="action_library_book"
                name="Library Books"
                res_model="library.book"
                view_mode="tree,form"
    />
    <!--Элемент <act_window> определяет действие окна на стороне клиента,
    которое будет открывать модель library.book с включенными представлениями
    дерева и формы в указанном порядке-->

    <!-- Menu item to open the Book list -->
    <menuitem id="menu_library_book"
              name="Books"
              parent="menu_library"
              action="action_library_book"
    />
    <!--<menuitem> определяет элемент верхнего меню, который вызывает
    action_library_book действие, которое было определено ранее-->
</odoo>